<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_background"
    android:orientation="horizontal"
    android:padding="@dimen/bt_devices_recycler_view_padding">

    <ImageView
        android:id="@+id/dialog_moto_item_image"
        android:layout_width="@dimen/bt_devices_recycler_view_image_size"
        android:layout_height="@dimen/bt_devices_recycler_view_image_size"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="@drawable/circular_image_view_grey"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/bt_devices_recycler_view_image_padding"
        app:srcCompat="@drawable/ic_motorcycle_white_24dp" />

    <TextView
        android:id="@+id/dialog_moto_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/moto"
        android:textColor="@android:color/black" />
</LinearLayout>