<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    android:id="@+id/history_cardview"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="@dimen/history_width"
            android:layout_height="@dimen/history_height"
            android:id="@+id/history_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_name"
            android:textColor="@color/textPrimary"
            android:layout_toEndOf="@+id/history_image"
            android:layout_alignParentTop="true"
            android:text="Acquisition's name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_date"
            android:textColor="@color/textSecondary"
            android:text="Date"
            android:layout_toEndOf="@+id/history_image"
            android:layout_below="@+id/history_name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>